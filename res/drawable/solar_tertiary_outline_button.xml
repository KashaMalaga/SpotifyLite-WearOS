<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/glue_button_bordered_border_width" android:color="@color/white_5" />
            <solid android:color="@color/pasteTransparent" />
            <size android:height="@dimen/glue_button_bordered_height" />
            <corners android:radius="@dimen/glue_button_bordered_corner_radius" />
            <padding android:left="@dimen/glue_button_bordered_padding" android:top="0.0px" android:right="@dimen/glue_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/glue_button_bordered_border_width" android:color="@color/green" />
            <solid android:color="@color/pasteTransparent" />
            <size android:height="@dimen/glue_button_bordered_height" />
            <corners android:radius="@dimen/glue_button_bordered_corner_radius" />
            <padding android:left="@dimen/glue_button_bordered_padding" android:top="0.0px" android:right="@dimen/glue_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/glue_button_bordered_border_width" android:color="@color/white_10" />
            <solid android:color="@color/pasteTransparent" />
            <size android:height="@dimen/glue_button_bordered_height" />
            <corners android:radius="@dimen/glue_button_bordered_corner_radius" />
            <padding android:left="@dimen/glue_button_bordered_padding" android:top="0.0px" android:right="@dimen/glue_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/glue_button_bordered_border_width" android:color="@color/white_20" />
            <solid android:color="@color/pasteTransparent" />
            <size android:height="@dimen/glue_button_bordered_height" />
            <corners android:radius="@dimen/glue_button_bordered_corner_radius" />
            <padding android:left="@dimen/glue_button_bordered_padding" android:top="0.0px" android:right="@dimen/glue_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
</selector>